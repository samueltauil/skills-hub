---
interface Props {
  id: string;
  name: string;
  description: string;
  category: string;
  complexity?: 'beginner' | 'intermediate' | 'advanced';
  triggers?: string[];
  author?: string;
}

const { id, name, description, category, complexity, triggers = [], author } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

const complexityColors = {
  beginner: 'badge-success',
  intermediate: 'badge-warning',
  advanced: 'badge-primary'
};
---

<article class="skill-card card">
  <div class="skill-header">
    <h3 class="skill-name">
      <a href={`${baseUrl}skills/${id}/`}>{name}</a>
    </h3>
    {complexity && <span class={`badge ${complexityColors[complexity]}`}>{complexity}</span>}
  </div>
  
  <p class="skill-description">{description}</p>
  
  <div class="skill-meta">
    <span class="badge">{category}</span>
    {author && <span class="skill-author">by {author}</span>}
  </div>
  
  {triggers.length > 0 && (
    <div class="skill-triggers">
      <span class="triggers-label">Triggers:</span>
      <div class="triggers-list">
        {triggers.slice(0, 3).map(trigger => (
          <code class="trigger">{trigger}</code>
        ))}
        {triggers.length > 3 && <span class="more">+{triggers.length - 3}</span>}
      </div>
    </div>
  )}
</article>

<style>
  .skill-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .skill-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .skill-name {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .skill-name a {
    color: var(--color-text);
  }

  .skill-name a:hover {
    color: var(--color-accent);
  }

  .skill-description {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    line-height: 1.5;
    flex-grow: 1;
  }

  .skill-meta {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .skill-author {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .skill-triggers {
    border-top: 1px solid var(--color-border);
    padding-top: 0.75rem;
    margin-top: 0.25rem;
  }

  .triggers-label {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    display: block;
    margin-bottom: 0.5rem;
  }

  .triggers-list {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .trigger {
    font-size: 0.75rem;
    padding: 0.125rem 0.375rem;
  }

  .more {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }
</style>
