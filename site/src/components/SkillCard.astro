---
interface Props {
  id: string;
  name: string;
  description: string;
  category: string;
  complexity?: 'beginner' | 'intermediate' | 'advanced';
  triggers?: string[];
  author?: string;
  fileCount?: number;
  source?: {
    repoName: string;
  };
}

const { id, name, description, category, complexity, triggers = [], fileCount = 0, source } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;

// Convert kebab-case to Title Case
function formatName(str: string): string {
  return str
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

const displayName = formatName(name);

const complexityColors = {
  beginner: 'badge-success',
  intermediate: 'badge-warning',
  advanced: 'badge-primary'
};
---

<article class="skill-card card">
  <div class="skill-header">
    <h3 class="skill-name">
      <a href={`${baseUrl}skills/${id}/`}>{displayName}</a>
    </h3>
    {complexity && <span class={`badge ${complexityColors[complexity]}`}>{complexity}</span>}
  </div>
  
  <p class="skill-description">{description}</p>
  
  <div class="skill-meta">
    <span class="badge">{category}</span>
    {fileCount > 0 && (
      <span class="meta-info">
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
          <polyline points="14 2 14 8 20 8"/>
        </svg>
        {fileCount} {fileCount === 1 ? 'file' : 'files'}
      </span>
    )}
    {source?.repoName && (
      <span class="meta-info source-info">
        <svg width="12" height="12" viewBox="0 0 16 16" fill="currentColor">
          <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
        </svg>
        {source.repoName.split('/')[0]}
      </span>
    )}
  </div>
  
  {triggers.length > 0 && (
    <div class="skill-triggers">
      <span class="triggers-label">Triggers:</span>
      <div class="triggers-list">
        {triggers.slice(0, 3).map(trigger => (
          <code class="trigger">{trigger}</code>
        ))}
        {triggers.length > 3 && <span class="more">+{triggers.length - 3}</span>}
      </div>
    </div>
  )}
</article>

<style>
  .skill-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    transition: border-color 0.2s ease, 
                box-shadow 0.2s ease, 
                transform 0.2s ease;
  }

  .skill-card:hover {
    transform: translateY(-3px);
  }

  .skill-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .skill-name {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .skill-name a {
    color: var(--color-text);
    transition: color 0.15s ease;
  }

  .skill-name a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .skill-description {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    line-height: 1.5;
    flex-grow: 1;
  }

  .skill-meta {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .meta-info {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .source-info {
    padding: 0.125rem 0.5rem;
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-sm);
  }

  .skill-author {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .skill-triggers {
    border-top: 1px solid var(--color-border);
    padding-top: 0.75rem;
    margin-top: 0.25rem;
  }

  .triggers-label {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    display: block;
    margin-bottom: 0.5rem;
  }

  .triggers-list {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .trigger {
    font-size: 0.75rem;
    padding: 0.125rem 0.375rem;
  }

  .more {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }
</style>
